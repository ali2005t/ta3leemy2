{
  "buildCommand": "",
  "outputDirectory": ".",
  "public": true,
  "rewrites": [
    { "source": "^/login/?$", "destination": "/auth/login.html" },
    { "source": "^/register/?$", "destination": "/auth/register.html" },
    { "source": "^/forgot-password/?$", "destination": "/auth/forgot-password.html" },
    { "source": "^/verify-email/?$", "destination": "/auth/verify_email.html" },
    { "source": "^/reset-password/?$", "destination": "/auth/reset_password.html" },
    { "source": "^/admin/(.*)?$", "destination": "/admin/$1" },
    { "source": "^/student-app/(.*)?$", "destination": "/student-app/$1" },
    { "source": "^/teacher/(.*)?$", "destination": "/teacher/$1" },
    { "source": "^/([^.]+)/?$", "destination": "/$1.html" },
    { "source": "^/$", "destination": "/index.html" }
  ]
}
